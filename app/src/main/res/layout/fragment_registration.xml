<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueVeryLight"
    tools:context=".ui.fragments.RegistrationFragment">

    <TextView
        android:id="@id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:text="@string/registrations"
        android:textSize="34sp"
        android:textColor="@color/colorTextBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGoogle"
        style="@style/white_button_google_registration"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginTop="117dp"
        android:layout_marginEnd="@dimen/normal_margin"
        android:textColor="@color/colorAccent_"
        android:text="@string/registration_through_google"
        android:drawableStart="@drawable/ic_logo_google"
        android:paddingStart="@dimen/big_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/registration_fragment_or_phone_text"
        android:layout_width="148dp"
        android:layout_height="16dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/or_enter_number"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorGray"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGoogle" />

    <EditText
        android:id="@+id/registration_fragment_edit_text"
        style="@style/white_edit"
        android:inputType="phone"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="@dimen/normal_margin"
        android:hint="@string/you_phone_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_fragment_or_phone_text" />

    <Button
        android:id="@+id/registration_fragment_reg_btn"
        style="@style/red_button"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        android:text="@string/to_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_fragment_edit_text" />

    <TextView
        android:id="@+id/registration_fragment_conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:gravity="center"
        android:text="@string/registration_conditions"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_fragment_reg_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SearchFragment">

    <ImageView
        android:id="@+id/search_fragment_add_btn"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/ic_add"
        android:layout_margin="@dimen/normal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/ic_profile"
        android:layout_margin="@dimen/normal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_fragment_i_want_buy_sell_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="38sp"
        android:text="Я хочу арендовать"
        android:textColor="@color/colorTextBlack"
        android:drawableRight="@drawable/ic_arrow_down"
        android:layout_margin="@dimen/normal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_fragment_add_btn"/>

    <TextView
        android:id="@+id/search_fragment_apartment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="38sp"
        android:text="квартиру"
        android:textColor="@color/colorRedBtn"
        android:drawableRight="@drawable/ic_arrow_down"
        android:layout_margin="@dimen/normal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_fragment_i_want_buy_sell_tv"/>

    <EditText
        android:id="@+id/search_fragment_address_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:hint="@string/Where"
        android:drawableStart="@drawable/ic_geo"
        android:backgroundTint="@color/colorTextBlack"
        android:clickable="false"
        android:focusable="false"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/search_fragment_apartment_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/search_fragment_price_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:hint="@string/cost_to"
        android:drawableStart="@drawable/ic_wallet"
        android:backgroundTint="@color/colorTextBlack"
        android:clickable="false"
        android:focusable="false"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/search_fragment_address_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="text_h1">
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="text_h2">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="text_h3">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="text_normal">
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="red_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_red_background</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="white_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_white_background</item>
    </style>

    <style name="white_button_google_registration">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_white_background_google</item>
    </style>

    <style name="white_edit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:ems">10</item>
        <item name="android:hint">@string/you_phone_number</item>
        <item name="android:inputType">phone</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:gravity">center|start</item>
        <item name="android:background">@drawable/edit_white_background</item>
    </style>

</resources>